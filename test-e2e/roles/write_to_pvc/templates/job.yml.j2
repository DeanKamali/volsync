---

kind: Job
apiVersion: batch/v1
metadata:
  generateName: writer-
  namespace: "{{ pvc_namespace }}"
spec:
  completions: 1
  parallelism: 1
  backoffLimit: 6
  template:
    spec:
      containers:
        - name: busybox
          image: gcr.io/distroless/static:debug
          imagePullPolicy: IfNotPresent
          command: ["sh", "-c"]
          args:
            - |
              set -x -e -o pipefail

              id
              mkdir -p `dirname /mnt/{{ path }}`
              echo '{{ data }}' > '/mnt/{{ path }}'
              stat '/mnt/{{ path }}'
              sync
          securityContext:
            allowPrivilegeEscalation: false
            capabilities:
              drop: ["ALL"]
            readOnlyRootFilesystem: true
          volumeMounts:
            - name: pvc
              mountPath: "/mnt"
      restartPolicy: Never
{% if podSecurityContext is defined %}
      securityContext: {{ podSecurityContext }}
{% endif %}
      terminationGracePeriodSeconds: 2
      volumes:
        - name: pvc
          persistentVolumeClaim:
            claimName: "{{ pvc_name }}"
